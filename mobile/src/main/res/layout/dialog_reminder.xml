<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back"
    android:weightSum="1">
    <EditText
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Введите название"
        style="@style/title_text"
        android:singleLine="true" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPickerDialogTitle"
            android:layout_weight="1"
            style="@style/my_LabelStyle.normal"
            android:text="Сколько раз в день напоминать"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="5dip"
            android:layout_gravity="top" />
    </TableRow>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.19"
        android:layout_margin="5dip">
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:hint="Здесь можно ввести комментарий"
        android:id="@+id/note_text"
        android:paddingLeft="7dp"
        android:lines="5"
        android:gravity="top"
        style="@style/note_text"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОТМЕНА"
            android:id="@+id/btnCancel"
            android:layout_weight="0.5"
            style="@style/my_Button_other" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОК"
            android:id="@+id/btnOK"
            android:layout_weight="0.5"
            style="@style/my_Button_ok" />
    </TableRow>
</LinearLayout>