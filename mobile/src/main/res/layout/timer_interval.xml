<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grey_gradient"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/black_frame"
        android:layout_margin="5dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="0.99">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Часов"
                    android:id="@+id/textView6"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:textColor="#000000"
                    style="@style/LabelStyle.normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Минут"
                    android:id="@+id/textView7"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:textColor="#000000"
                    style="@style/LabelStyle.normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Секунд"
                    android:id="@+id/textView8"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:textColor="#000000"
                    style="@style/LabelStyle.normal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dip"
                android:weightSum="1"
                style="@style/TextViewStyle">

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/txtHours"
                    android:layout_weight="0.33"
                    android:text="00"
                    style="@style/LabelStyle.big" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/txtMinutes"
                    android:layout_weight="0.33"
                    android:text="15"
                    style="@style/LabelStyle.big" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/txtSeconds"
                    android:layout_weight="0.33"
                    android:text="00"
                    style="@style/LabelStyle.big" />
            </TableRow>
        </LinearLayout>
    </TableRow>




    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название интервала"
            android:id="@+id/textView5"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="#000000"
            style="@style/LabelStyle.normal" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtIntervalName"
            android:layout_weight="1"
            android:text="interval1"
            android:background="@drawable/black_frame"
            android:layout_margin="5dip"
            android:maxLines="1"
            android:minLines="1"
            android:inputType="textShortMessage" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_marginRight="6dip">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbAdvance"
            android:checked="false"
            android:text="За сколько секунд оповестить об окончании таймера"
            android:layout_alignTop="@+id/txtAdvance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/txtAdvance"
            android:layout_toLeftOf="@+id/txtAdvance"
            android:layout_toStartOf="@+id/txtAdvance" />

        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtAdvance"
            android:text="00"
            android:clickable="true"
            style="@style/LabelStyle.big"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/txt_control" />

    </RelativeLayout>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dip"
                android:paddingBottom="5dip"
                android:showDividers="beginning|middle|end"
                android:weightSum="1"
                android:layout_weight="3.25">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Четкий ритм - задает определенную в секундах переодичность сигнала"
                    android:id="@+id/cdRithm"
                    android:checked="false"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/txtRithm"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/txtRithm" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtRithm"
                    android:text="00"
                    android:clickable="true"
                    style="@style/LabelStyle.big"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/txt_control" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dip">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Плавающий ритм - количесто напоминаний во время работы таймера (периоды случайные)"
                    android:id="@+id/cdWaked"
                    android:checked="false"
                    android:layout_weight="0.8"
                    android:layout_alignTop="@+id/txtWake"
                    android:layout_toLeftOf="@+id/txtWake"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/txtWake"
                    android:layout_gravity="center_vertical"
                    android:text="00"
                    style="@style/LabelStyle.big"
                    android:layout_weight="0.2"
                    android:background="@drawable/txt_control"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </LinearLayout>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:clickable="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:id="@+id/btnCancel"
            android:layout_weight="0.5"
            android:layout_gravity="bottom"
            style="@style/Button_other" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОК"
            android:id="@+id/btnOK"
            android:layout_weight="0.5"
            android:layout_gravity="bottom"
            style="@style/Button_ok" />


    </TableRow>


</LinearLayout>