<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:type="linear" android:endColor="#999999" android:startColor="#eeeeee" android:angle="90.0" />
            <!--<corners android:radius="10.0dip" />-->
            <stroke android:width="1dip" android:color="#54575a" />
            <padding android:left="20dip" android:right="20dip" android:top="7dip" android:bottom="7dip"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <gradient android:type="linear" android:endColor="#c4c4c4" android:startColor="#ffffff" android:angle="90.0" />
            <!--<corners android:radius="10.0dip" />-->
            <stroke android:width="1dip" android:color="#595b5c" />
            <padding android:left="20dip" android:right="20dip" android:top="7dip" android:bottom="7dip"/>
        </shape>
    </item>
</selector>